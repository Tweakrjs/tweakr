{
  "name": "tweakr",
  "version": "0.0.1",
  "description": "A modern, modular utility library for JavaScript and TypeScript with functional, async, and immutable helpers.",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "utils",
    "utility",
    "typescript",
    "modular",
    "async",
    "functional",
    "immutable",
    "helpers"
  ],
  "license": "MIT",
  "author": "Coxlee Anthony Hubilla <https://github.com/coxxanthony>",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "prepare": "husky",
    "release": "standard-version",
    "commit": "cz",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coxxanthony/tweakr.git"
  },
  "bugs": {
    "url": "https://github.com/coxxanthony/tweakr/issues"
  },
  "homepage": "https://github.com/coxxanthony/tweakr#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "standard-version": "^9.5.0"
  },
  "lint-staged": {
    "*.ts": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
